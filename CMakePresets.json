{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    // Shared
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "warnings": {
        "deprecated": true,
        "unusedCli": true,
        "uninitialized": true
      }
    },

    // Windows
    {
      "name": "win-default",
      "inherits": "base",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "vendor": { "microsoft.com/VisualStudioSettings/CMake/1.0": { "hostOS": [ "Windows" ] } }
    },
    {
      "name": "win-debug",
      "inherits": "win-default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "win-release",
      "inherits": "win-default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    // Linux
    {
      "name": "linux-default",
      "inherits": "base",
      "hidden": true,
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": { "hostOS": [ "Linux" ] },
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": { "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}" }
      }
    },
    {
      "name": "linux-debug",
      "inherits": "linux-default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-release",
      "inherits": "linux-default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    // MacOS
    {
      "name": "macos-default",
      "inherits": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/opt/local/bin/clang-mp-17",
        "CMAKE_CXX_COMPILER": "/opt/local/bin/clang++-mp-17",
        // This requires the full path to ninja because visual studio doesn't find it on the PATH when cross compiling:
        "CMAKE_MAKE_PROGRAM": "/usr/local/bin/ninja"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": { "hostOS": [ "macOS" ] },
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": { "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}" }
      }
    },
    {
      "name": "macos-debug",
      "inherits": "macos-default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "macos-release",
      "inherits": "macos-default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}